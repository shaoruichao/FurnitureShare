<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text=""
            android:textColor="#181818"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#F6890C"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#dadada" />


    <RelativeLayout
        android:id="@+id/rl_contract"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        >


        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#181818"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#A0A0A0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_alignBottom="@+id/iv_thumb"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#181818"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_foregift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_alignBottom="@+id/iv_thumb"
            android:layout_marginLeft="41dp"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textColor="#181818"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#333333"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#dadada" />

    <LinearLayout
        android:id="@+id/ll_operation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right">
        
        <Button
            android:id="@+id/bt_change"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_contract"
            android:text="变更租约"
            android:textSize="13sp"
            android:textColor="#434343"/>

        <Button
            android:id="@+id/bt_refund"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/bt_contract"
            android:text="确认押金退还"
            android:textSize="13sp"
            android:textColor="#434343"
            android:layout_marginRight="15dp"/>


        <Button
            android:id="@+id/bt_pay"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:background="@drawable/bt_contract"
            android:text="支付租金"
            android:textSize="13sp"
            android:textColor="#434343"
            android:layout_marginRight="15dp"/>
        
    </LinearLayout>


</LinearLayout>