<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.FurnitureShare.ui.activity.DestailActivity">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_black"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="15sp"
            android:textColor="#191919"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_below="@+id/rl_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:background="#dadada" />

    <RelativeLayout
        android:id="@+id/rl_shoppingcat"
        android:layout_width="87dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/iv_shoppingcat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/comui_tab_shopping"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#dadada" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/rl_shoppingcat"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/rl_joinshoppingcat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="加入购物车"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_raise"
            android:layout_width="0dp"
            android:background="#F3D05A"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即租赁"
                android:textSize="14sp"
                />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
